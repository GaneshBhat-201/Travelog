<% layout("/layouts/boilerplate")%>
<script>
    const mapToken= "<%= process.env.MAP_TOKEN %>";
    const listing= <%- JSON.stringify(listing) %>;
</script>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3><b><%=listing.title%></b> </h3>
            <div class="card listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing-image">
                <br>
                <div class="card-body">
                    <p class="card-text">
                        Owned by <i><%= listing.owner.username %></i><br>
                        <%=listing.description%> <br>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%> <br>
                        <%=listing.location%> <br>
                        <%=listing.country%> <br>
                    </p>
                </div>
            </div>
            <!-- <ul>
                <li><%=listing.title%></li>
                <li><%=listing.description%></li>
                <li>&#8377;<%=listing.price.toLocaleString("en-IN")%></li>
                <li><%=listing.location%></li>
                <li><%=listing.country%></li>
            </ul> -->
            <br>
            <% if(currUser && listing.owner._id.equals(currUser.id)){ %>
            <div class="show-btn">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn">Edit</a>
                <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
            <br><br>
            <% } %>

            <% if(currUser){ %>
            <hr>
            <div class="mb-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%=listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        
                        <!-- <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"> -->
                        <fieldset class="starability-slot">
                            <legend>Rating:</legend>
                            <!-- <label for="rating" class="form-label">Rating</label> -->
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                      
                            <input type="radio" id="rate1" name="review[rating]" value="1" />
                            <label for="rate1">1 star.</label>
                      
                            <input type="radio" id="rate2" name="review[rating]" value="2" />
                            <label for="rate2">2 stars.</label>
                      
                            <input type="radio" id="rate3" name="review[rating]" value="3" />
                            <label for="rate3">3 stars.</label>
                      
                            <input type="radio" id="rate4" name="review[rating]" value="4" />
                            <label for="rate4">4 stars.</label>
                      
                            <input type="radio" id="rate5" name="review[rating]" value="5" />
                            <label for="rate5">5 stars.</label>
                      
                            <span class="starability-focus-ring"></span>
                          </fieldset>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                        <div class="invalid-feedback">please add some comments for review</div>
                    </div>
                    <br>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
            <% } %>
            
            <% if(listing.reviews.length>0){ %>
            <hr><br>
            <div class="row">
            <p><b>All Reviews:</b></p>
            <% for(review of listing.reviews) {%>
                <div class="card col-5 ms-3 mb-3">
                    <div class="card-body ">
                        <h5 class="card-title">@<%= review.author.username %></h5>
                        <p class="card-text"><%=review.comment%></p>
                        <!-- <p class="card-text"><%=review.rating%> stars</p> -->
                        <p class="starability-result" data-rating="<%=review.rating%>">
                            Rated: 3 stars
                        </p>
                        <!-- <a href="/listing/<%= listing._id %>/reviews/<%=review._id%>" class="card-link">Delete</a> -->
                        <form action="/listings/<%= listing._id %>/reviews/<%=review._id%>?_method=DELETE" method="post">
                            <button class="btn btn-dark btn-sm mb-3">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
            </div>
            <% } %>
        </div>
        <div class="col-8 offset-2">
            <hr><br>
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>
    </div>
    <br><br>
    <script src="/js/map.js"></script>
</body>
